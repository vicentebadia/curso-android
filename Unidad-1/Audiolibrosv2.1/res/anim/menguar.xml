<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
     android:shareInterpolator="true">

    <scale android:interpolator="@android:anim/anticipate_overshoot_interpolator"
           android:fromXScale="0.8" android:toXScale="1.0"
           android:fromYScale="0.8" android:toYScale="1.0"
           android:pivotX="50%" android:pivotY="50%"
           android:duration="500"/>
    
</set>

<!-- Esta animación hará que la vista reduzca su tamaño hasta desaparecer en el centro de la vista -->